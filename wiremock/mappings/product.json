{
  "request": {
    "method": "GET",
    "urlPathPattern": "/product/([0-9]+)"
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "id": "{{request.pathSegments.[1]}}",
      "name": "Product {{request.pathSegments.[1]}}",
      "price": 9.99,
      "availability": true
    },
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
